{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "diagnostics": false,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es7",
      "es6",
      "scripthost",
      "es2015.promise",
      "es2018.promise",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object"
    ],
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build/",
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
